{
  "extends": "@rushstack/heft-node-rig/profiles/default/config/heft.json",

  // TODO: Add comments
  "$phasesByName.inheritanceType": "merge",
  "phasesByName": {
    "$build.inheritanceType": "merge",
    "build": {
      "cleanAdditionalFiles": [
        {
          "sourcePath": "ambientTypes.d.ts"
        }
      ],

      "$tasksByName.inheritanceType": "merge",
      "tasksByName": {
        "copy-ambient-types": {
          "taskEvent": {
            "eventKind": "copyFiles",
            "options": {
              "copyOperations": [
                {
                  "sourcePath": "./src/ambientTypes.d.ts",
                  "destinationFolders": ["."]
                }
              ]
            }
          }
        }
      }
    }
  }
}
