{
  "$schema": "https://developer.microsoft.com/json-schemas/heft/v0/heft.schema.json",

  "extends": "@rushstack/heft-node-rig/profiles/default/config/heft.json",

  // TODO: Add comments
  "phasesByName": {
    "build": {
      "cleanFiles": [
        {
          "sourcePath": "ambientTypes.d.ts"
        }
      ],

      "tasksByName": {
        "copy-ambient-types": {
          "taskEvent": {
            "eventKind": "copyFiles",
            "options": {
              "copyOperations": [
                {
                  "sourcePath": "./src",
                  "includeGlobs": ["ambientTypes.d.ts"],
                  "destinationFolders": ["."]
                }
              ]
            }
          }
        }
      }
    }
  }
}
